<!-- shows the data from a scenario as an ad targeted as a doer, someone who can perform the task in the scenario -->

<div id="<%= "lion_ad_content_#{scenario.id}_donate" %>">
  <%= link_to("https://lion-frontend-uat.herokuapp.com/#{scenario.id}/donator/") do %>
    <%= image_tag scenario.image.url(:medium) %>

    <h1><%= "#{scenario.verb.description.slice(0,1).capitalize}#{scenario.verb.description.slice(1..-1)} #{scenario.requester.firstname.slice(0,1).capitalize}#{scenario.requester.firstname.slice(1..-1)} #{scenario.noun.description}" %></h1>

    <h2><%= scenario.event.description  if scenario.event %></h2>

    <% if scenario.custom_message then %>
      <p><%= scenario.custom_message %></p>
    <% else %>
      <p>Can you donate money to help
        <%= scenario.doer.firstname.slice(0,1).capitalize + scenario.doer.firstname.slice(1..-1) %>
        <%= scenario.verb.description %>
        <%= scenario.noun.description %>
        for
        <%= scenario.requester.firstname.slice(0,1).capitalize + scenario.requester.firstname.slice(1..-1) %>?
      </p>
    <% end %>
  <% end %>
</div>
